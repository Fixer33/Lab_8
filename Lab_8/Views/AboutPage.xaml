<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab_8.Views.AboutPage"
             xmlns:controls="clr-namespace:Lab_8.Controls"
             xmlns:vm="clr-namespace:Lab_8.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <controls:WeatherView x:Name="weatherInfo" HeaderText="Погода сейчас"/>
    </StackLayout>

</ContentPage>